{
    "source": {
        "include": ["src"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "plugins/markdown",
        "better-docs/component"
    ],
    "templates": {
        "better-docs": {
            "name": "My React components"
        }
    },
    "opts": {
        "recurse": true,
        "destination": "./docs/",
        "readme": "README.md"
    }
}